//Programa que determina si un número es par o impar
#include <stdio.h>

int main() {
    int num;
    char continuar;

    do {
        printf("Ingrese un numero entero: ");
        scanf("%d", &num);

        if (num % 2 == 0) 
        {
            printf("El numero %d es un número par.\n", num);
        } else {
            printf("El numero %d es un número impar.\n", num);
        }

        printf("Ingrese s si desea continuar y n si no desea continuar: ");
        scanf(" %c", &continuar); 

    } while (continuar == 's');

    printf("Fin. \n");

    return 0;
}

***************************** PSEUDOCODIGO **************************************************

INICIO
    REPETIR
        MOSTRAR "Ingrese un número entero: "
        LEER num

        SI (num MOD 2 = 0) ENTONCES
            MOSTRAR "El número ", num, " es un número par."
        SINO
            MOSTRAR "El número ", num, " es un número impar."
        FIN_SI

        MOSTRAR "Ingrese s si desea continuar y n si no desea continuar: "
        LEER continuar
    MIENTRAS continuar = 's'

    MOSTRAR "Fin."
FIN
